<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="400.0" minWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="id.dojo.hellofx.controllers.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="CENTER" prefHeight="54.0" prefWidth="560.0">
      <children>
         <Label text="Weight">
            <font>
               <Font name="System Bold" size="13.0" />
            </font>
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </Label>
         <TextField fx:id="weightTextField" />
         <Label text="Kg">
            <font>
               <Font name="System Bold" size="13.0" />
            </font>
         </Label>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="54.0" prefWidth="560.0">
      <children>
         <Label text="Height">
            <font>
               <Font name="System Bold" size="13.0" />
            </font>
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </Label>
         <TextField fx:id="heighText" />
         <Label text="Cm">
            <font>
               <Font name="System Bold" size="13.0" />
            </font>
         </Label>
      </children>
   </HBox>
    <Button onAction="#onHelloButtonClick" text="Tampilkan Pesan" />
   <Button fx:id="listButton" onAction="#onHelloButtonClick" text="List" />
</VBox>
